{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "Right",
  "required": [
    "kind",
    "code",
    "name"
  ],
  "additionalProperties": false,
  "rights": {
    "type": "object",
    "properties": {
      "kind": {
        "type": "string",
        "title": "Kind of custom object",
        "pattern": "right"
      },
      "code": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "translations": {
        "type": "object",
        "items": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "canonicalRights": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  }
}
